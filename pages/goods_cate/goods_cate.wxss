page {
  background-color: #fff !important;
}

.productSort .aside {
  position: fixed;
  width: 180rpx;
  top: 0;
  left: 0;
  bottom: 0;
  background-color: #f7f7f7;
  overflow-y: auto;
  overflow-x: hidden;
}

.productSort .aside .item {
  height: 80rpx;
  width: 100%;
  font-size: 26rpx;
  color: #424242;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.productSort .aside .item.on {
  background-color: #fff;
  border-left: 4rpx solid #fc4141;
  width: 100%;
  text-align: center;
  color: #fc4141;
  font-weight: bold;
}

.productSort .conter {
  padding: 0 0 0 180rpx;
}

.productSort .conter .listw {
  padding-top: 20rpx;
}

.productSort .conter .listw .title {
  height: 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.productSort .conter .listw .title .name {
  font-size: 28rpx;
  color: #333;
  margin: 0 30rpx;
  font-weight: bold;
}

.goodList .item {
  padding: 15rpx 0rpx 15rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.goodList .item .pictrue {
  width: 180rpx;
  height: 180rpx;
}

.goodList .item .pictrue image {
  border-radius: 6rpx;
  width: 100%;
  height: 100%;
}

.goodList .item .underline {
  padding-left: 20rpx;
}

.goodList .item .text {
  font-size: 30rpx;
  color: #222;
  width: 310rpx;
}

.goodList .item .text .title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  height: 80rpx;
}

.goodList .item .text .content {
  height: 60rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 40rpx;
}

.goodList .item .text .content .changeNum {
  width: 160rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.goodList .item .text .content .changeNum .num {
  width: 60rpx;
  text-align: center;
}

.goodList .item .text .content .changeNum .icon {
  width: 45rpx;
  height: 45rpx;
}

.goodList .item .text .money {
  font-size: 26rpx;
  font-weight: bold;
  color: #fc4141 !important;
  display: flex;
  align-items: center;
}

.goodList .item .text .money .num {
  font-size: 30rpx;
}

.special {
  padding: 0 20rpx 0 30rpx;
}

.special .appoint {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.special .appoint .date {
  background: #f1f1f1;
  height: 60rpx;
  width: 200rpx;
  text-align: center;
  margin-left: 10rpx;
  font-size: 30rpx;
}

.special .appoint .time {
  background: #f1f1f1;
  height: 60rpx;
  width: 180rpx;
  text-align: center;
  margin-left: 10rpx;
  font-size: 30rpx;
}

.special .address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 0;
  background: white;
  border-bottom: 2rpx solid #eee;
}

.special .address .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.special .address .left .icon {
  width: 45rpx;
  height: 45rpx;
}

.special .address .left .detail {
  display: flex;
  flex-direction: column;
}

.special .address .left .detail .detail1 {
  display: flex;
  justify-content: flex-start;
}

.special .address .left .detail .detail1 .name {
  margin-left: 20rpx;
  font-weight: bold;
}

.special .address .left .detail .detail2 {
  margin-left: 20rpx;
  padding-top: 10rpx;
}

.special .address .left .detail .detail2 .pl30 {
  padding-left: 30rpx;
}

.special .address .left .choose {
  margin-left: 20rpx;
  font-weight: bold;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  font-size: 32rpx;
}

.special .address .right {
  display: flex;
  align-items: center;
}

.special .address .right .dayu {
  width: 16rpx;
  height: 26rpx;
}

.special .result {
  height: 80rpx;
  display: flex;
  align-items: center;
}

.special .result .distance {
  font-size: 30rpx;
  font-weight: bold;
  color: #fc4141 !important;
}