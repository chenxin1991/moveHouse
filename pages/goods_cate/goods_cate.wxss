  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 10rpx 0;
}

.productSort .conter .listw .title .name {
  font-size: 28rpx;
  color: #333;
  margin: 0 30rpx;
  font-weight: bold;
}
.goodList{
  display: flex;
  flex-wrap: wrap;
}
.goodList .item {
