.shoppingCart .list .item {
  padding: 25rpx 30rpx;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.shoppingCart .list .item .picTxt {
  width: 627rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.shoppingCart .list .item .picTxt .pictrue {
  width: 160rpx;
  height: 160rpx;
}

.shoppingCart .list .item .picTxt .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.shoppingCart .list .item .picTxt .text {
  width: 444rpx;
}

.shoppingCart .list .item .picTxt .text .title {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
}

.shoppingCart .list .item .picTxt .text .content {
  height: 60rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 20rpx;
}

.shoppingCart .list .item .picTxt .text .content .changeNum {
  width: 160rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.shoppingCart .list .item .picTxt .text .content .changeNum .num {
  width: 60rpx;
  text-align: center;
}

.shoppingCart .list .item .picTxt .text .content .changeNum .icon {
  width: 45rpx;
  height: 45rpx;
}

.shoppingCart .list .item .picTxt .text .content .money {
  margin-top: 28rpx;
  color: #fc4141 !important;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: bold;
}

.shoppingCart .list .item .picTxt .text .content .money .num {
  font-size: 30rpx;
}

.shoppingCart .invalidGoods {
  background-color: #fff;
}

.shoppingCart .invalidGoods .goodsNav {
  width: 100%;
  height: 66rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #282828;
}

.shoppingCart .invalidGoods .goodsNav .iconfont {
  color: #424242;
  font-size: 28rpx;
  margin-right: 17rpx;
}

.shoppingCart .invalidGoods .goodsNav .del {
  font-size: 26rpx;
  color: #999;
}

.shoppingCart .invalidGoods .goodsNav .del .icon-shanchu1 {
  color: #999;
  font-size: 33rpx;
  vertical-align: -2rpx;
  margin-right: 8rpx;
}

.shoppingCart .invalidGoods .goodsList .item {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.shoppingCart .invalidGoods .goodsList .item .invalid {
  font-size: 22rpx;
  color: #fff;
  width: 70rpx;
  height: 36rpx;
  background-color: #aaa;
  border-radius: 3rpx;
  text-align: center;
  line-height: 36rpx;
}

.shoppingCart .invalidGoods .goodsList .item .pictrue {
  width: 140rpx;
  height: 140rpx;
}

.shoppingCart .invalidGoods .goodsList .item .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.shoppingCart .invalidGoods .goodsList .item .text {
  width: 433rpx;
  font-size: 28rpx;
  color: #999;
  height: 140rpx;
}

.shoppingCart .invalidGoods .goodsList .item .text .infor {
  font-size: 24rpx;
}

.shoppingCart .invalidGoods .goodsList .item .text .end {
  font-size: 26rpx;
  color: #bbb;
}

.shoppingCart .footer {
  width: 100%;
  height: 96rpx;
  background-color: #fafafa;
  position: fixed;
  bottom: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
}

.shoppingCart .footer .checkAll {
  font-size: 28rpx;
  color: #282828;
  margin-left: 16rpx;
}

.shoppingCart .footer checkbox .wx-checkbox-input {
  background-color: #fafafa;
}

.shoppingCart .footer .money {
  font-size: 30rpx;
}

.shoppingCart .footer .placeOrder {
  color: #fff;
  font-size: 30rpx;
  width: 226rpx;
  height: 70rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 70rpx;
  margin-left: 22rpx;
  padding: 0;
}

.shoppingCart .footer .button .bnt {
  font-size: 28rpx;
  color: #999;
  border-radius: 50rpx;
  border: 1px solid #999;
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0;
}

.shoppingCart .footer .button form~form {
  margin-left: 17rpx;
}

.noCart {
  margin: 130rpx 100rpx;
}

.noCart .iconfont {
  font-size: 150rpx;
  color: #ccc;
  text-align: center;
  display: block;
  margin-bottom: 24rpx;
}

.noCart .cont {
  display: block;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  margin-top: 20rpx;
}

.noCart .flow-btn-min {
  background: #fff;
  border: 1rpx solid #ccc;
  height: 30px;
  line-height: 30px;
  font-size: 28rpx;
  width: 200rpx;
  margin: 0 auto;
  border-radius: 5px;
  text-align: center;
  color: #777;
  margin-top: 25rpx;
}