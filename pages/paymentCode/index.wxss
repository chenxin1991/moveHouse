.paymentCode-wrapper {
  width: 100%;
  height: 100vh;
  background: #ff5155;
  display: flex;
  justify-content: center;

}

.paymentCode-wrapper .paymentCode-content {
  width: 84%;
  height: 774rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  border: 2rpx solid #fff;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 190rpx;
}

.paymentCode-wrapper .paymentCode-content image {
  width: 480rpx;
  height: 480rpx;
}

.paymentCode-wrapper .paymentCode-content .paymentCode-content-text {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

