/* pages/MyAccount/index.wxss */
.MyAccount-wrapper{
  width: 100%;
  height: 100vh;
  background: #ff5155;
 position: relative;
top: 0;
left: 0;
}
.MyAccount-wrapper .MyAccount-main{
 width: 50%;
 height: 50vh;
 position: absolute;
 top: 150rpx;
 left: 25%;
 display: flex;
 flex-direction: column;
 align-items: center;
}
.MyAccount-wrapper .MyAccount-main .MyAccount-main-avatar{
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
 margin-bottom: 81rpx;
 overflow: hidden;
 }
 .MyAccount-wrapper .MyAccount-main .MyAccount-main-name{
  width: 100%;
  color: #fff;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
 
.MyAccount-wrapper .MyAccount-footer{
 width: 64%;
 height: 80rpx;
 border: 2rpx solid #fff;
position: absolute;
bottom: 200rpx;
left: 18%;
border-radius: 40rpx;
display: flex;
align-items: center;
justify-content: center;
color: #fff;
}