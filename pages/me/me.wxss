/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ff5155;
  height: 300rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 40rpx;
  border-radius: 50%;
}

.order {
  background: white;
  margin-bottom: 16rpx;
}

.order .header {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
}

.order .content {
  height: 160rpx;
  display: flex;
  flex-direction: row;
}

.order .content .item {
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content: center;
  align-items: center;
}