<!--index.wxml-->
<view class="container">
	<view class="userinfo">
		<button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
		<block wx:else>
			<image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
			<text style="color: white;">{{userInfo.nickName}}</text>
		</block>
		<view style="margin-top:20rpx;"><text style="color:white;">绑定手机号 ></text></view>
	</view>
	<view class="order">
		<view class="header" bindtap="allOrders">
			<text style="font-weight: bold;">全部订单</text>
			<view style="display:flex;align-items:center;">
				<text style="margin-right:20rpx;color:#AAAAAA">查看全部订单</text>
				<image src='/images/dayu.png' style='width:16rpx;height:26rpx;'></image>
			</view>
		</view>
		<view class="content">
			<view class="item">
				<image src="/images/dispatch.png" style="width:64rpx;height:64rpx;"></image>
				<text style="margin-top:10rpx;">待派单</text>
			</view>
			<view class="item">
				<image src="/images/start.png" style="width:64rpx;height:64rpx;"></image>
				<text style="margin-top:10rpx;">待开工</text>
			</view>
			<view class="item">
				<image src="/images/complete.png" style="width:64rpx;height:64rpx;"></image>
				<text style="margin-top:10rpx;">待完工</text>
			</view>
			<view class="item">
				<image src="/images/comment.png" style="width:64rpx;height:64rpx;"></image>
				<text style="margin-top:10rpx;">待评价</text>
			</view>
		</view>
	</view>
		<view class="order">
		<view class="header">
			<text style="font-weight: bold;">我的服务</text>
		</view>
		<view class="content">
			<view class="item">
				<image src="/images/coupon.png" style="width:64rpx;height:64rpx;"></image>
				<text style="margin-top:10rpx;">优惠券</text>
			</view>
			<navigator url="/pages/about_us/about_us" class="item">
				<image src="/images/about.png" style="width:64rpx;height:64rpx;"></image>
				<text style="margin-top:10rpx;">关于我们</text>
			</navigator>
		</view>
	</view>
</view>