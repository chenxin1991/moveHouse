<view class="topay-wrapper">
<view class="topay-content">
  <view class="topay-icon">
  <image src="/images/failure.png" style="width:90rpx;height:90rpx;"></image>
 <!-- <image src="/images/success2.png" style="width:90rpx;height:90rpx;"></image> -->
  </view>

  <view class="topay-title">

  <view class="title-text">订单支付失败</view>
   <view class="title-text">(请现场工作人员查看支付情况)</view>
  </view>

   <view class="topay-item">
    <view class="item-content" wx:for="{{payList}}" wx:key="{{index}}">
   <text>{{item.name}}</text>
    <text>{{item.num}}</text>
   </view>
   </view>

   <view class="topay-footer">
   <view class="topay-btn confirmBtn">查看订单</view>
   <view class="topay-btn closeBtn">返回首页</view>
   </view>
</view>
</view>
